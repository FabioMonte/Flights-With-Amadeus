<h3>Search Destinations</h3>

<form>
    <label for="searchFromList"></label>
    <input @bind="_inputText" id="searchFromList"/>
    <button type="button" class="btn btn-primary" @onclick="OnSearchClicked">
        Get most travelled destinations
    </button>
</form>

@code {
    private string? _inputText;

    // EventCallback allows parent to pass a method
    [Parameter] 
    public EventCallback<string?> OnSearch { get; set; }

    private async Task OnSearchClicked()
    {
        // Invoke the parent's method, passing the input value
        await OnSearch.InvokeAsync(_inputText);
    }
}